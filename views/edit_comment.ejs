<%- include("partials/header") %>

<h1 style="text-align: center;">Edit comment</h1>
<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" style="margin: 25px auto; width: 30%">
  <div class="form-group">
    <input class="form-control" type="text" name ="comment[text]" value="<%= comment.text %>">
  </div>
  <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit</button>
  </div>
  <a href="/campgrounds">Go Back</a>
</form>
