<%- include("partials/header") %>

<h1 style="text-align: center;">Create a new Comment for <%= campground.name %></h1>
<form action="/campgrounds/<%= campground._id %>/comments" method="POST" style="margin: 25px auto; width: 30%">
  <div class="form-group">
    <input class="form-control" type="text" name ="comment[text]" placeholder="Text">
  </div>
  <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit</button>
  </div>
  <a href="/campgrounds">Go Back</a>
</form>
